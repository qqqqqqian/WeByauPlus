/* components/scoreCard/index.wxss */
@import '/icon/icon.wxss';

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 700rpx;
}

.header {
  width: 100%;
  height: 150rpx;
  background-color: #00adb5;
  border-radius: 10rpx 10rpx 0 0;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.term {
  font-size: 35rpx;
  margin-top: 5rpx;
}

.count {
  font-size: 30rpx;
  margin-top: 50rpx;
}

.totalCredit {
  display: inline-block;
  position: relative;
  right: 140rpx;
  width: 180rpx;
}

.averageScore {
  display: inline;
  position: relative;
  left: 140rpx;
}

.list {
  font-size: 35rpx;
  color: #999;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 5rpx 0;
}

.card {
  width: 100%;
}

.list text:nth-child(n+2):nth-child(-n+5) {
  width: 100rpx;
  text-align: center;
}

.list text:nth-child(n+2):nth-child(-n+5) {
  display: flex;
  justify-content: center;
  align-items: center;
}

.list text:nth-child(1) {
  width: 400rpx;
  padding-left: 10rpx;
}

.list:nth-child(n+2) {
  color: black;
}

.list:nth-child(odd) {
  background-color: rgb(248, 248, 248);
}

.refresh {
  position: absolute;
  right: 40rpx;
  top: 20rpx;
 font-size: 50rpx;
}

.rotate {
  animation: circle 1s infinite linear;
}

@keyframes circle {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
